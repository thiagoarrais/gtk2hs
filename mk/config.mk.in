# @configure_input@
#
# This Makefile contains all configuration data.

TOP		= @TOP@

AR		= @AR@
LN		= @LN_S@
PWD		= @PWD@
GREP		= @GREP@
GZIP		= @GZIP@
SED		= @SED@
TAR		= @TAR@
TOUCH		= @TOUCH@
INSTALL		= @INSTALL@
CPP		= @CPP@
CC		= @CC@

PATHSED		= '@PATHSED@'

# stolen from GHC's config.mk.in:

prefix			= @prefix@
exec_prefix		= @exec_prefix@
bindir			= @bindir@
datadir			= @datadir@
#sysconfdir		= @datadir@
#sharedstatedir		= @sharedstatedir@
#localstatedir		= @localstatedir@
libdir			= @libdir@
includedir		= @includedir@
oldincludedir		= @oldincludedir@
mandir			= @mandir@

#UNUSED, see below: libexecdir              = @libexecdir@
#UNUSED:infodir		= @infodir@
#UNUSED:srcdir          = @srcdir@

# 
# Default values for most of the above are only set if
# they weren't configured to anything in particular
# via the configure script. (i.e., we make no assumption
# that the autoconf-generated script will assign defaults
# to all of the above).
#
ifeq "$(strip $(exec_prefix))" ""
exec_prefix		= $(prefix)
endif
ifeq "$(strip $(bindir))" ""
bindir			= $(exec_prefix)/bin
endif

#
# NOTE: by intention, libexecdir and libdir point to 
# the same place.
#  => Only way to override this is to set libexecdir= on the command line.
#     (NOTE: configure script setting is ignored).
libexecdir		= $(libdir)

ifeq "$(strip $(datadir))" ""
datadir		= $(prefix)/share
endif
ifeq "$(strip $(libdir))" ""
libdir		= $(exec_prefix)/lib
endif
ifeq "$(strip $(includedir))" ""
includedir	= $(prefix)/include
endif
ifeq "$(strip $(oldincludedir))" ""
oldincludedir	= /usr/include
endif
ifeq "$(strip $(mandir))" ""
mandir		= $(prefix)/man
endif


HC		= @HC@
PKG		= @GHCPKG@


# Compile different extensions

# Provide image manipulation functions.
ENABLE_PIXBUF	= @ENABLE_PIXBUF@

# Provide an OpenGL widget.
ENABLE_OPENGL	= @ENABLE_OPENGL@


# This should be libXXX.a and XXX for Unix and
#		    XXX.lib and XXX.exe for Windows

LIBPREFIX	= @SLPREFIX@ 
LIBSUFFIX	= @SLSUFFIX@
OBJSUFFIX	= .@OBJEXT@
APPSUFFIX	= @EXEEXT@

# Set to "yes" if we are compiling on Windows.
WIN32		= @WIN32@

CFLAGS		= @CFLAGS@
CPPFLAGS	= @CPPFLAGS@

HC_FLAGS	= @HCFLAGS@

BROKENCB	= @FOUR_WORD_CALLBACK@

ifeq (x$(WIN32),xyes)
HC_FLAGS	+= -DWIN32
endif

HSC		= $(dir $(HC))hsc2hs

MARSHALLDEFS	= @MARSHALLDEFS@
C2HS_CONFIG	= @C2HS_CONFIG@
C2HS		= @C2HS@
C2HSFLAGS	= @C2HSFLAGS@

HSCFLAGS	= @HSCFLAGS@

GTK_LIBS	= @GTK_LIBS@
GTK_CFLAGS	= @GTK_CFLAGS@

MULTIPLE_CHS	= @MULTIPLE_CHS@

NEW_MODULE_SYS  = @NEW_MODULE_SYSTEM@

LOCALPKGCONF	= @LOCALPKGCONF@

HSTOOLFLAGS	= $(filter -H%,$(HC_FLAGS)) -M350m

BUILT_IN_C2HS	= @BUILT_IN_C2HS@

.PHONY: default all install installdirs installfiles installpackage \
	installcheck uninstall uninstallfiles uninstallpackage \
	clean distclean maintainerclan mostlyclean \
	inplace noinplace inplaceinit dist tarsource debug

